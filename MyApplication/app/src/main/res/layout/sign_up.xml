<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_login" />

    <TextView
        android:id="@+id/title_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:gravity="right"
        android:text="BÉ ĐĂNG KÝ TÀI KHOẢN NHA!"
        android:textColor="#E3002D"
        android:textSize="30sp"
        android:textStyle="bold" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_login"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/title_sign_up"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="166dp"
        android:src="@drawable/gif_login" />

    <RelativeLayout
        android:id="@+id/parent_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gif_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <EditText
            android:id="@+id/et_username_sign_up"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:hint="    Tên đăng nhập"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_password_sign_up"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edit_text"
            android:layout_below="@+id/et_username_sign_up"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="    Mật khẩu"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/et_repassword_sign_up"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edit_text"
            android:layout_below="@+id/et_password_sign_up"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="    Nhập lại mật khẩu"
            android:inputType="textPassword" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="144dp"
        android:layout_height="49dp"
        android:layout_below="@+id/parent_sign_up"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="#FFE3002D"
        android:text="Đăng ký" />

    <TextView
        android:id="@+id/have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_sign_up"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:text="Bé đã có tài khoản?"
        android:textColor="#E3002D"
        android:textSize="18sp"
        android:textStyle="italic" />

</RelativeLayout>