<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_home"
    android:orientation="vertical"
    tools:context=".NguyenAmActivity">

    <!--task bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#66B8F8"
        android:orientation="horizontal"
        android:weightSum="4">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/back_gif_na"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_gif"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_lesson_na"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:src="@drawable/img_lesson"/>
        <ImageView
            android:id="@+id/img_home_na"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:src="@drawable/home"/>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/next_gif_na"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/next"
            android:layout_weight="1" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_nguyenam_a"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/img_nguyenam_a"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:src="@drawable/img_a_na" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_nguyenam_aw"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/img_nguyenam_aw"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:paddingBottom="5dp"
                        android:src="@drawable/img_aw_na" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_nguyenam_aa"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/img_nguyenam_aa"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/img_aa_na" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_nguyenam_e"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/img_nguyenam_e"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/img_e_na" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_nguyenam_ee"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/img_nguyenam_ee"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="20dp"
                        android:paddingTop="13dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_ee_na" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_nguyenam_i"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/img_nguyenam_i"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_i_na" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_nguyenam_o"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/img_nguyenam_o"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_o_na" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_nguyenam_oo"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/img_nguyenam_oo"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:paddingBottom="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_oo_na" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_nguyenam_ow"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/img_nguyenam_ow"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/img_ow_na" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_nguyenam_u"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/img_nguyenam_u"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:padding="5dp"
                        android:src="@drawable/img_u_na" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_nguyenam_uw"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/img_nguyenam_uw"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:padding="7dp"
                        android:src="@drawable/img_uw_na" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_nguyenam_y"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:id="@+id/img_nguyenam_y"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:padding="5dp"
                        android:src="@drawable/img_y_na" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</LinearLayout>